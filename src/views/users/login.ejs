 <head>
 <%- include ('../partials/head') %>
 <link rel="stylesheet" href="/css/login.css">
</head>
  <body>
    <header>
    <%- include ('../partials/header') %>
  </header>

    <main class="main">
      <picture class="picture">
        <a href="/"> <img src="/images/LogoMaines.svg" altclass="logo" class="logo-maines"/></a>
      </picture>

    <% if (locals.errors && errors.email) { %>
    <p class="error-msg"><%= errors.email.msg %> </p>
    <% } %>
    <% if (locals.errors && errors.password) { %>
    <p class="error-msg"><%= errors.password.msg %> </p>
    <% } %>
    
      <form class="formInicioSesion" action="/users/access" method="post" id="login">
        <fieldset>
          <label class="labelLogin" for="email"
            >Mail registrado</label
          >
          <input
            class="inputLogin"
            type="text"
            name="email"
            id="email"
            required
          />
        </fieldset>

        <fieldset>
          <label class="labelLogin" for="password">Contraseña</label>
          <input
            class="inputLogin"
            type="password"
            name="password"
            id="password"
            required
          />
        </fieldset>
<p class="remember-box"><input type="checkbox" name="remember" id="remember" />Recordar usuario</p>
        <!--<div class="olvidasteContra">
          <a href="#" target="_blank">¿Olivdaste tu contraseña?</a>
        </div>
      -->
        <button class="botonLogin" type="submit">Iniciar Sesión</button>

        <div class="crearCuenta">
           <a href="/users/register">¿No tenes cuenta? </a>
          
        </div>
      </form>
        
    </main>

    <%- include ('../partials/footer') %>
<script src="../js/validateLogin.js"></script>
  </body>
</html>
