</head>

<body>
    <header>
        <%- include ('../partials/header') %>
    </header>

    

    
    <main>
        <picture>
            <img src="/images/LogoMaines.svg" class="logo" />
    
        </picture>
        
            <p>Registrate para guardar tus pedidos, preferencias y hacer un seguimiento!</p>

    <% if(locals.errors) {%> 
    <% if (errors.name) {%>
    <p class="error-msg"><%- errors.name.msg %></p>
    <% } %>
    <% if (errors.last_name) {%>
    <p class="error-msg"><%- errors.last_name.msg %></p>
    <% } %>
    <% if (errors.email) {%>
    <p class="error-msg"><%- errors.email.msg %></p>
    <% } %> <% if (errors.password) { %>
    <p class="error-msg"><%- errors.password.msg %></p>
    <% } %>  <% } %>
    
        <form action="/users/save" id="register"  method="POST" class="formulario-registro" enctype="multipart/form-data" >
            <fieldset>
                <label for="name" class= "negrita"> Nombre/s </label>
                <input class ="input-formulario-registro" type="text" name='name'>
                <p class="feedback"></p>
            </fieldset>
            <fieldset>
                <label for="last_name" class= "negrita"> Apellido/s </label>
                <input class ="input-formulario-registro" type="text" name='last_name'>                
                <p class="feedback"></p>
            </fieldset>
            <fieldset>
                <label for="email" class= "negrita">Email</label>
                <input class ="input-formulario-registro" type="mail" name="email">
                <p class="feedback"></p>
            </fieldset>
            <fieldset>
                <label for="userName" class= "negrita"> Nombre de Usuario </label>
                <input class ="input-formulario-registro" type="text" name='userName'>                
                <p class="feedback"></p>
            </fieldset>
            <fieldset>
                <label for="password" class= "negrita">Contraseña</label>
                <input class ="input-formulario-registro" type="password" name='password'>
                <p class="feedback"></p>
            </fieldset>
             <fieldset>
                <label for="avatar">Seleccione su imagen de perfil</label> 
                <input type="file" id="file" name="avatar" class="foto-perfil">
                <p class="feedback"></p>
            </fieldset>
